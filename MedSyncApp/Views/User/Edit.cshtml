@using MedSyncApp.Core.Application.ViewModels.User;
@model UpdateUserViewModel;
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card bg-left bg-gradient border-0 rounded-3">
                <div class="card-header bg-success bg-gradient text-light p-2">
                    <h4 class="m-2 display-6">Editar usuario</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="Edit">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                        }
                        <div class="mb-3">
                            <label asp-for="Firstname" class="form-label custom-dark-color fw-bold">Nombre</label>
                            <input asp-for="Firstname" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Lastname" class="form-label custom-dark-color fw-bold">Apellido</label>
                            <input asp-for="Lastname" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label custom-dark-color fw-bold">Email</label>
                            <input asp-for="Email" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label custom-dark-color fw-bold">Nombre de Usuario</label>
                            <input asp-for="Username" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <div class="alert alert-success m-2" role="alert">
                            En caso de no registrar una nueva contraseña permanecerá la existente.
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label custom-dark-color fw-bold">Contraseña</label>
                            <input asp-for="Password" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label custom-dark-color fw-bold">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" class="form-control custom-input bg-success bg-opacity-10 custom-dark-color" />
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-success m-2">Volver atrás</a>
                            <button type="submit" class="btn btn-success m-2">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


